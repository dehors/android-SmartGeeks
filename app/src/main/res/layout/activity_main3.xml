<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:layout_centerHorizontal="true"
        android:id="@+id/btncentrohorizontalarriba"
        android:layout_above="@+id/btncentrocentrocentro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:layout_centerHorizontal="true"
        android:id="@+id/btncentrohorizontalabajo"
        android:layout_below="@+id/btncentrocentrocentro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:layout_centerHorizontal="true"
        android:id="@+id/btncentrohorizontalderecha"
        android:layout_toRightOf="@+id/btncentrocentrocentro"
        android:layout_alignBaseline="@+id/btncentrocentrocentro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:layout_centerHorizontal="true"
        android:id="@+id/btncentrohorizontalizquierda"
        android:layout_toLeftOf="@+id/btncentrocentrocentro"
        android:layout_alignBaseline="@+id/btncentrocentrocentro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center"
        android:layout_centerInParent="true"
        android:id="@+id/btncentrocentrocentro"/>
</RelativeLayout>